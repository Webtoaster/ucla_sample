<form method="post" action="{{ path('race_type_delete', {'raceTypeId': race_type.raceTypeId}) }}"
      onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ race_type.raceTypeId) }}">
    <button class="btn btn-danger btn-lg btn-block active mt-2">Delete Record</button>
</form>
