{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - {{ title|default('Email Verification is Completed') }}{% endblock %}
{% block title %}Email Verification is Completed.{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app_register') }}
{% endblock %}


{% block body %}
    <h2 class="h3 mb-3 font-weight-normal">{{ title|default('Email Verification is Completed') }}</h2>
    <h1 class="mt-2">Email Verification is Completed.</h1>
    <p class="lead">Your Email Address has been verified.</p>

    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <p>You are now logged in to {{ site_name }}.</p>

        <p>Let's enter a new Company/Association which you are going to represent.</p>

        <p><a href="{{ url('company_new') }}" class="btn btn-primary btn-lg btn-block active" role="button"
              aria-disabled="true">Add Company</a></p>


    {% else %}
        <p>You are not currently signed in to {{ site_name }}.</p>
        <p>Please click <a href="{{ path('app_login') }}">here</a> to sign in.</p>
    {% endif %}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app_register') }}
{% endblock %}