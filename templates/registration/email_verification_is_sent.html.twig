{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - {{ title|default('Email Verification has been sent') }}{% endblock %}
{% block title %}Email Has Been Sent To You.{% endblock %}




{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app_register') }}
{% endblock %}






{% block body %}
    <h2 class="h3 mb-3 font-weight-normal">{{ title|default('Email Verification has been sent') }}</h2>

    <h1 class="mt-2">Email Verification has been sent.</h1>
    <p class="lead">Dear {{ first_name }},</p>

    <p>We have sent you an email to {{ email_address }}.</p>

    <p>Please open your email and click on the link to verify your email address.</p>

    <p>This link expires in 1 hour.</p>

    <p>Thank you,</p>

    <p>The Community Election Team</p>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app_register') }}
{% endblock %}