{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - {{ title|default('Sign Up') }}{% endblock %}
{% block title %}Registration - About Yourself{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app_register') }}
{% endblock %}


{% block body %}
    <h2 class="h3 mb-3 font-weight-normal">{{ title|default('Sign Up') }}</h2>
    <h1 class="mt-2">Sign Up</h1>
    <p class="lead">Please enter your First and Last Name, at least one Telephone Number and Enter a 6 character
        password below to get you started.&nbsp;
        Your Email Address is your User ID.&nbsp; Your Email Address will require verification upon accepting the Terms
        of Use on the next page.</p>
    {{ include('forms/Registration.html.twig') }}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app_register') }}
{% endblock %}



