{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ title|default(' Viewer') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {#	{{ encore_entry_link_tags('') }}#}
{% endblock %}

{% block body %}
    <h2 class="h3 mb-3 font-weight-normal">{{ title|default(' Viewer') }}</h2>
    <h1>Vote</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>VoteId</th>
            <td>{{ vote.voteId }}</td>
        </tr>
        <tr>
            <th>CreatedFromIp</th>
            <td>{{ vote.createdFromIp }}</td>
        </tr>
        <tr>
            <th>UpdatedFromIp</th>
            <td>{{ vote.updatedFromIp }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ vote.createdAt ? vote.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>UpdatedAt</th>
            <td>{{ vote.updatedAt ? vote.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>IsActive</th>
            <td>{{ vote.isActive ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('vote_index') }}"
       class="btn btn-primary btn-lg btn-block active" role="button" aria-disabled="true">Return to List</a>



    <a href="{{ path('vote_edit', {'voteId': vote.voteId}) }}"
       class="btn btn-danger btn-lg btn-block active" role="button" aria-disabled="true">Edit Record</a>

    {{ include('vote/_delete_form.html.twig') }}
{% endblock %}
